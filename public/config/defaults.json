{
  "scene": {
    "spaceType": "cartesian",
    "bounds": {
      "xMin": -10,
      "xMax": 10,
      "yMin": -10,
      "yMax": 10
    },
    "allQuadrants": true
  },
  "grid": {
    "defaultStyleId": "cartesian-dark"
  },
  "camera": {
    "panSpeed": 1.0,
    "zoomSpeed": 0.1,
    "zoomMin": 0.1,
    "zoomMax": 10.0,
    "zoomDefault": 1.0,
    "defaultPosition": {
      "x": 0,
      "y": 0,
      "zoom": 1.0,
      "rotation": 0
    }
  },
  "timeline": {
    "defaultDuration": 10.0,
    "defaultLoopMode": "once",
    "defaultPlaybackSpeed": 1.0,
    "snapEnabled": true,
    "snapThreshold": 10,
    "minKeyframeSpacing": 0.1
  },
  "parameters": {
    "defaults": {
      "min": -100,
      "max": 100,
      "step": 0.1
    }
  },
  "ui": {
    "defaultStepAmount": 1
  },
  "performance": {
    "debounceMs": 16,
    "enableCache": true,
    "workerThreshold": 1000,
    "idleThresholdMs": 500
  },
  "export": {
    "resolutions": [
      { "name": "720p", "width": 1280, "height": 720 },
      { "name": "1080p", "width": 1920, "height": 1080 },
      { "name": "4K", "width": 3840, "height": 2160 }
    ],
    "frameRates": [24, 30, 60],
    "qualities": ["draft", "medium", "high"]
  }
}
